user_input = int(input("Please enter a number for the size"
                       "of the shape you wish to create."))
 
for i in range(user_input):
    for j in range(i):
        print('* ', end="")
    print('')
 
for i in range(user_input, 0, -1): #if users answer is between 0 and -1
    for j in range(i): 
        print('* ', end="")
    print('')
    
    #example2
    user_input = int(input("Please enter the number of times "
                       "that you wish to see the message."))
 
for i in range(user_input): #will only print the amount of times of user input
    print("hello world....", i)
